<h1>Listing artists</h1>

<table>
  <thead>
    <tr>
      <th>Artist name</th>
      <th>City</th>
      <th>State</th>
      <th>Address</th>
      <th>Zip code</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.artist_name %></td>
        <td><%= artist.city %></td>
        <td><%= artist.state %></td>
        <td><%= artist.address %></td>
        <td><%= artist.zip_code %></td>
        <td><%= artist.category %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
